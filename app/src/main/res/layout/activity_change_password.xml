<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/change_password_main"
    android:background="@color/White"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.heartyy.heartyyfresh.ChangePasswordActivity">

    <EditText
        android:id="@+id/edit_current_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:capitalize="sentences"
        android:hint="Current Password"
        android:inputType="textPassword"
        android:maxLength="25"
        android:layout_marginTop="20dp"
        android:textColor="@color/edit_hint_zip"
        android:textColorHint="@color/edit_line_zip"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/edit_current_password"
        android:layout_marginTop="10dp"
        android:background="@color/hearty_hint" />

    <TextView
        android:id="@+id/text_warn_current_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:textColor="@color/red"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:text="Current password is required"/>

    <EditText
        android:id="@+id/edit_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:capitalize="sentences"
        android:hint="New Password"
        android:inputType="textPassword"
        android:maxLength="25"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text_warn_current_password"
        android:textColor="@color/edit_hint_zip"
        android:textColorHint="@color/edit_line_zip"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/edit_new_password"
        android:layout_marginTop="10dp"
        android:background="@color/hearty_hint" />

    <TextView
        android:id="@+id/text_warn_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:textColor="@color/red"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:text="New password is required"/>

    <LinearLayout
        android:id="@+id/linear_change_password_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_warn_new_password"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dip"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_change_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/button_green"
            android:text="Change Password"
            android:textColor="@color/White"
            android:textAllCaps="false"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_reset_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:layout_below="@+id/linear_change_password_button"
        android:background="@null"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="Forgot your password? reset here"
        android:textColor="@drawable/button_text_color"
        android:textAllCaps="false"
        android:textSize="16sp" />


</RelativeLayout>
