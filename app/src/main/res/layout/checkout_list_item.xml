<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0.5dp"
    android:layout_marginTop="0.5dp"
    android:background="@color/White">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/image_like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/unlike_icon"
            android:textOff=""
            android:textOn="" />

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image_like"
            android:src="@drawable/heartyy_placeholder" />

        <RelativeLayout
            android:id="@+id/layout_item_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image_item">

            <TextView
                android:id="@+id/text_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/layout_count"
                android:text="Bikano aloo bhujia"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_item_name"
                android:layout_marginTop="10dp"
                android:text="1 kg"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_price_dollor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_item_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/text_weight"
                android:text="$"
                android:textColor="@color/promotionblacktext"
                android:textSize="7sp" />

            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_item_name"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/text_price_dollor"
                android:text="8"
                android:textColor="@color/promotionblacktext"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_price_decimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_item_name"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/text_price"
                android:text="00"
                android:textColor="@color/promotionblacktext"
                android:textSize="7sp" />

            <ImageView
                android:id="@+id/view1"
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_below="@+id/text_price"
                android:layout_marginTop="10dp"
                android:background="@color/edit_line_zip" />

            <TextView
                android:id="@+id/text_substitute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_marginTop="10dp"
                android:text="Substitution:"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_substitute_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/text_substitute"
                android:paddingBottom="5dp"
                android:text="Store's Choice:"
                android:textColor="@color/hearty_green"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/layout_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="45dp">

                <ImageButton
                    android:id="@+id/button_minus"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/minus_icon_border"
                    android:padding="5dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/button_minus"
                    android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                    android:text="1"
                    android:textColor="@color/hearty_green"
                    android:textSize="12sp" />

                <ImageButton
                    android:id="@+id/button_plus"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@+id/text_quantity"
                    android:background="@drawable/plus_icon_border"
                    android:text="+"
                    android:textColor="@color/green"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text_total_price_dollor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/text_total_price"
                android:paddingTop="3dp"
                android:text="$"
                android:textColor="@color/promotionblacktext"
                android:textSize="6sp" />

            <TextView
                android:id="@+id/text_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/text_total_price_decimal"
                android:text="100"
                android:textColor="@color/promotionblacktext"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_total_price_decimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="3dp"
                android:text="00"
                android:textColor="@color/promotionblacktext"
                android:textSize="6sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>