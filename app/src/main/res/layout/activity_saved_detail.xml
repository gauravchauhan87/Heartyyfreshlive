<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/saved_item_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.heartyy.heartyyfresh.SavedDetailActivity">

    <RelativeLayout
        android:id="@+id/layout_saved_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:text="Your saved Items"
            android:textColor="@color/hearty_green"
            android:textSize="14sp" />


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cardList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_saved_items"
        android:layout_above="@+id/layout_reorder"
        android:paddingBottom="10dp"/>

    <RelativeLayout
        android:id="@+id/layout_reorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/button_reorder_all"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@+id/text_warn_zip"
            android:background="@drawable/button_green"
            android:text="Re-order all"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>
