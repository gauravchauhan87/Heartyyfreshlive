<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/delivery_store_date_main">

    <RelativeLayout
        android:id="@+id/layout_delivery_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_delivery_by"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/text_store_name"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:textSize="14sp"
            android:text="Sangram Palace(LiveSite)"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="date"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/text_store_name"
            android:textColor="@color/termsandcondition"/>

        <ImageView
            android:id="@+id/view0"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/text_date"
            android:background="@color/termsandcondition"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/text_store_name"/>

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="date"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/view0"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/text_store_name"
            android:textColor="@color/termsandcondition"/>

        <TextView
            android:id="@+id/text_store_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/text_store_name"
            android:visibility="gone"
            android:text="This store does not deliver in your area"
            android:textColor="@color/red"/>


        <TextView
            android:id="@+id/button_change_delivery_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:textColor="@drawable/button_text_color"
            android:text="change delivery time"/>

    </RelativeLayout>


</RelativeLayout>