<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_save_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/profile"
    android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:layout_marginBottom="0.5dp"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="0.5dp"
        android:layout_marginTop="0.5dp"
        app:cardUseCompatPadding="false"
        app:cardBackgroundColor="@color/White"
        app:cardCornerRadius="1dp"
        app:cardElevation="0.1dp">

        <ImageButton
            android:id="@+id/image_like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/unlike_icon"
            android:textOff=""
            android:textOn="" />

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:src="@drawable/heartyy_placeholder" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp">

            <TextView
                android:id="@+id/text_onsale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/hearty_red"
                android:padding="3dp"
                android:text="On Sale"
                android:textColor="@color/White"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_item_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_onsale"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:maxLength="32"
                android:text="Reynolds Pastel &amp; White Paper 2.5 inch Baking Cups"
                android:textColor="@color/edit_hint_zip"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_item_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_item_detail"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLength="68"
                android:text="(Bikano)"
                android:textColor="@color/edit_hint_zip"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_item_brand"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="2 X 40 oz Packs "
                android:textColor="@color/termsandcondition"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/button_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/text_discounted_price_dollor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="$"
                android:textColor="@color/hearty_green"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/text_discounted_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/text_discounted_price_dollor"
                android:text="2"
                android:textColor="@color/hearty_green"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_discounted_price_decimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/text_discounted_price"
                android:text="99"
                android:textColor="@color/hearty_green"
                android:textSize="8sp" />

            <RelativeLayout
                android:id="@+id/layout_price"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/text_discounted_price_decimal">

                <TextView
                    android:id="@+id/text_price_dollor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textColor="@color/termsandcondition"
                    android:textSize="5sp" />

                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text_price_dollor"
                    android:text="2"
                    android:textColor="@color/termsandcondition"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/text_price_decimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text_price"
                    android:text="99"
                    android:textColor="@color/termsandcondition"
                    android:textSize="5sp" />

                <ImageView
                    android:id="@+id/image_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:background="@color/termsandcondition" />
            </RelativeLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cell_cart_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_cart_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:alpha="0.9"
            android:background="@color/promotionblacktext"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp">

                <ImageButton
                    android:id="@+id/button_minus"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/minus_button"
                    android:text="-" />

                <ImageButton
                    android:id="@+id/button_plus"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/plus_button"
                    android:text="-" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/image_cart_add"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/cart_icon_after_add" />

                    <RelativeLayout
                        android:layout_width="32dp"
                        android:layout_height="32dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="3dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/circle_red" />

                        <RelativeLayout
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="3dp"
                            android:layout_marginRight="2dp">

                            <TextView
                                android:id="@+id/text_cart_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="0"
                                android:textColor="@color/White"
                                android:textSize="10sp" />

                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>