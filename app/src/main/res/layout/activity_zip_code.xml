<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zipcode_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.heartyy.heartyyfresh.ZipCodeActivity">

    <ImageView
        android:id="@+id/image_location"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/location_icon" />

    <TextView
        android:id="@+id/text_enter_zipcode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/image_location"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Enter your area zip code"
        android:textColor="@color/promotionblacktext"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/layout_linear_zip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_enter_zipcode"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_zip1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edit_text_zip_code1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/edit_hint_zip"
                android:textColorHint="@color/edit_line_zip"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/edit_text_zip_code1"
                android:layout_marginTop="10dp"
                android:background="@color/hearty_hint" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_zip2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edit_text_zip_code2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/edit_hint_zip"
                android:textColorHint="@color/edit_line_zip"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/edit_text_zip_code2"
                android:layout_marginTop="10dp"
                android:background="@color/hearty_hint" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_zip3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edit_text_zip_code3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/edit_hint_zip"
                android:textColorHint="@color/edit_line_zip"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/edit_text_zip_code3"
                android:layout_marginTop="10dp"
                android:background="@color/hearty_hint" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_zip4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edit_text_zip_code4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/edit_hint_zip"
                android:textColorHint="@color/edit_line_zip"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/edit_text_zip_code4"
                android:layout_marginTop="10dp"
                android:background="@color/hearty_hint" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_zip5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edit_text_zip_code5"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/edit_hint_zip"
                android:textColorHint="@color/edit_line_zip"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/edit_text_zip_code5"
                android:layout_marginTop="10dp"
                android:background="@color/hearty_hint" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text_warn_zip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_linear_zip"
        android:gravity="center_horizontal"
        android:textColor="@color/red"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:text="Name should be minimum of 2 characters"/>

    <LinearLayout
        android:id="@+id/linear_start_shopping_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_linear_zip"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="75dp">

        <Button
            android:id="@+id/button_start_shopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_green"
            android:text="Start Shopping"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>


</RelativeLayout>
