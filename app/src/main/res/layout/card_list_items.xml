<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_item_main"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">


    <ImageView
        android:id="@+id/image_card"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:src="@drawable/paypal_icon" />

    <ImageView
        android:id="@+id/view1"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image_card"
        android:background="@color/hearty_hint" />

    <TextView
        android:id="@+id/text_card_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/view1"
        android:paddingTop="5dp"
        android:text="Primary"
        android:textColor="@color/hearty_green"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_card_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_card_primary"
        android:layout_marginTop="10dp"
        android:text="Personal"
        android:textColor="@color/termsandcondition" />

    <TextView
        android:id="@+id/text_card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_card_type"
        android:layout_marginTop="10dp"
        android:text="XXXX-4242"
        android:textColor="@color/edit_hint_zip" />

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="Delete"
        android:background="@color/White"
        android:src="@drawable/close_refine"
        android:textColor="@drawable/button_text_color"
        />


</RelativeLayout>