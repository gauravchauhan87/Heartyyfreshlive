<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/hearty_green"
    android:elevation="2dp"
    android:theme="@style/ToolBarStyle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">


        <RelativeLayout
            android:id="@+id/layout_zip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_shop"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/shop_icon" />

            <TextView
                android:id="@+id/text_shopping_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_shop"
                android:gravity="center_vertical"
                android:text="Shopping in"
                android:textColor="@color/edit_hint_zip" />

            <TextView
                android:id="@+id/text_zip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text_shopping_in"
                android:gravity="center_vertical"
                android:text="94105"
                android:textColor="@color/White" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text_zip"
                android:gravity="center_vertical"
                android:src="@drawable/change_zip_icon" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_zip"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/img_timmer"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/timer_icon" />

            <TextView
                android:id="@+id/text_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_timmer"
                android:gravity="center_vertical"
                android:text="Earliest delivery today by 5:00 pm"
                android:textColor="@color/edit_hint_zip" />


        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.Toolbar>
