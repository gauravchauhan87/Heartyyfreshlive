<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:id="@+id/delivery_slots_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/layout_text_slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/text_slot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="10-11 AM"
            android:textSize="12sp" />


    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/layout_image_slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/image_slot"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/circle_delivery" />

        <ImageView
            android:id="@+id/image_slot_right"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_toRightOf="@+id/image_slot"
            android:background="@color/edit_line_zip" />
        <ImageView
            android:id="@+id/image_slot_left"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/image_slot"
            android:background="@color/edit_line_zip" />



    </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="52dp">

        <ImageView
            android:id="@+id/image_car"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingBottom="8dp"
            android:layout_centerInParent="true"
            android:src="@drawable/delivery_car_icon" />

    </RelativeLayout>

</RelativeLayout>