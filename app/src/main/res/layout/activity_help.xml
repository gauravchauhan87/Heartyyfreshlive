<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/help_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.heartyy.heartyyfresh.HelpActivity">

        <RelativeLayout
            android:id="@+id/layout_image_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/image_info"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/support_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_faq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/White"
            android:paddingBottom="20dp"
            android:paddingTop="10dp"
            android:layout_below="@+id/layout_image_info"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/img_faq"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/faq_icon" />

            <TextView
                android:id="@+id/text_faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/img_faq"
                android:gravity="center_vertical"
                android:text="FAQ"
                android:textColor="@color/edit_hint_zip" />

            <ImageView
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/img_faq"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img_faq"
                android:background="@color/hearty_hint" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img_faq"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/text_answers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="You can find answers to "
                    android:textColor="@color/edit_hint_zip"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/text_questoins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text_answers"
                    android:text="most frequent questions "
                    android:textColor="@color/hearty_green_dark"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text_questoins"
                    android:text="here"
                    android:textColor="@color/edit_hint_zip"
                    android:textSize="10sp" />


            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/White"
            android:paddingBottom="20dp"
            android:paddingTop="10dp"
            android:layout_below="@+id/layout_faq"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/img_email"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/mail_icon" />

            <TextView
                android:id="@+id/text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/img_email"
                android:gravity="center_vertical"
                android:text="Email Heartyy"
                android:textColor="@color/edit_hint_zip" />

            <ImageView
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/img_email"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img_email"
                android:background="@color/hearty_hint" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img_email">

                <TextView
                    android:id="@+id/text_sendus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Send us "
                    android:textColor="@drawable/button_text_color"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text_sendus"
                    android:text="an email with your feedback"
                    android:textColor="@color/edit_hint_zip"
                    android:textSize="10sp" />


            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_email"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/White"
            android:paddingBottom="20dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/img_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/chat_icon" />

            <TextView
                android:id="@+id/text_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/img_comment"
                android:gravity="center_vertical"
                android:hint="Leave a comment"
                android:textColor="@color/black"
                android:textColorHint="@color/edit_hint_zip" />

            <ImageView
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/img_comment"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img_comment"
                android:background="@color/hearty_hint" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view3"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img_comment">

                <TextView
                    android:id="@+id/text_experience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:text="Tell us about your Heartyy Fresh experience "
                    android:textColor="@color/hearty_green_dark"
                    android:textSize="10sp"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/layout_edit_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">


                    <EditText
                        android:id="@+id/edit_comment"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="5dp"
                        android:background="@drawable/edit_border"
                        android:gravity="top|left"
                        android:textSize="14sp"
                        android:hint="Tell us about your Heartyy Fresh experience"
                        android:textColor="@color/edit_hint_zip"
                        android:textColorHint="@color/edit_line_zip" />

                    <Button
                        android:id="@+id/text_send_comment"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/edit_comment"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_green"
                        android:text="Submit"
                        android:textColor="@color/White"
                        android:textAllCaps="false" />
                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
