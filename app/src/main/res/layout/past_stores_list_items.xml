<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/layout_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sat,Oct 20"
            android:textSize="12sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/edit_hint_zip"
            />

        <ImageView
            android:id="@+id/view1"
            android:layout_width="2dp"
            android:layout_height="10dp"
            android:background="@color/hearty_hint"
            android:layout_toRightOf="@+id/text_date"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3-4 pm"
            android:layout_toRightOf="@+id/view1"
            android:layout_marginLeft="7dp"
            android:textSize="12sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/edit_hint_zip"
            />


    </RelativeLayout>



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/layout_date_time">
    <TextView
        android:id="@+id/text_stores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New India Bazar"
        android:textSize="14sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/edit_hint_zip"
        />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_centerVertical="true"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="0.0" />


    <TextView
        android:id="@+id/text_delivery_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Cancelled"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/edit_hint_zip"/>

</RelativeLayout>

</RelativeLayout>