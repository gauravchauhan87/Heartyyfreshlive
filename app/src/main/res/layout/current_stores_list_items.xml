<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">



    <RelativeLayout
        android:id="@+id/layout_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sat,Oct 20"
            android:textSize="12sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/edit_hint_zip"
            />

        <ImageView
            android:id="@+id/view1"
            android:layout_width="2dp"
            android:layout_height="10dp"
            android:background="@color/hearty_hint"
            android:layout_toRightOf="@+id/text_date"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3-4 pm"
            android:layout_toRightOf="@+id/view1"
            android:layout_marginLeft="7dp"
            android:textSize="12sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/edit_hint_zip"
            />


    </RelativeLayout>

    <TextView
            android:id="@+id/text_stores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New India Bazar"
            android:layout_below="@+id/layout_date_time"
            android:textSize="14sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/edit_hint_zip"
            />

    <TextView
        android:id="@+id/text_delivery_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivered"
        android:layout_below="@+id/layout_date_time"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/edit_hint_zip"
        />


</RelativeLayout>