<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/forgot_password_main"
    android:background="@color/White"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.heartyy.heartyyfresh.ForgotPasswordActivity">

    <ImageView
        android:id="@+id/image_forgot_password"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/forgot_password_icon"/>

    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image_forgot_password"
        android:layout_marginTop="30dp"
        android:textColor="@color/promotionblacktext"
        android:gravity="center_horizontal"
        android:textSize="14sp"
        android:text="Please enter the email address you used to \ncreate your account\n\nWe will send you an email with password reset instructions"/>

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:capitalize="sentences"
        android:hint="Email address"
        android:inputType="textEmailAddress"
        android:maxLength="50"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/text_email"
        android:textColor="@color/edit_hint_zip"
        android:textColorHint="@color/edit_line_zip"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/edit_email"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/hearty_hint" />

    <TextView
        android:id="@+id/text_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tip: your email is your username"
        android:gravity="center_horizontal"
        android:textSize="12sp"
        android:textColor="@color/edit_line_zip"
        android:layout_below="@+id/view1"/>


    <LinearLayout
        android:id="@+id/linear_password_reset_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_tip"
        android:layout_marginTop="40dip"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_request_password_reset"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/button_green"
            android:text="Request Password Reset"
            android:textColor="@color/White"
            android:textAllCaps="false"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
