<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:editTextStyle">@style/myEditText</item>
    </style>

    <style name="AppThemeNew" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- App core design -->
        <item name="colorPrimary">@color/hearty_green</item>
        <item name="colorPrimaryDark">@color/hearty_green_dark</item>
        <item name="colorAccent">@color/hearty_green_dark</item>
        <item name="android:editTextStyle">@style/myEditText</item>


        <item name="android:textColorPrimary">@color/White</item>

    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hearty_green</item>
        <item name="colorPrimaryDark">@color/hearty_green_dark</item>
        <item name="colorAccent">@color/hearty_green_dark</item>
        <item name="android:textColorPrimary">@color/hearty_green</item>
       <!-- <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
        <item name="homeAsUpIndicator">@drawable/hamburger</item>
        <!--<item name="android:windowBackground">@drawable/overlay_background</item>
        <item name="android:windowActionBarOverlay">true</item>-->
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:icon">@drawable/hamburger_open_icon</item>
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
    </style>

    <style name="myEditText" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
    </style>

    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">50dip</item>
        <item name="android:maxHeight">50dip</item>
        <item name="android:progressDrawable">@drawable/progress_color</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

</resources>
